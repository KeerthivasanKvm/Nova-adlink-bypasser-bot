# Bot Configuration
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id
API_HASH=your_api_hash

# Firebase Configuration
FIREBASE_CREDENTIALS=firebase-credentials.json
FIREBASE_PROJECT_ID=your-project-id

# Admin Configuration
OWNER_ID=your_telegram_id
ADMIN_IDS=admin1_id,admin2_id,admin3_id

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
PORT=8080
HOST=0.0.0.0

# Webhook Configuration (for Render/Heroku)
WEBHOOK_MODE=true
WEBHOOK_URL=https://your-app.onrender.com

# Force Subscribe
FORCE_SUB_ENABLED=true
FORCE_SUB_CHANNEL=-1001234567890
FORCE_SUB_GROUP=-1001234567890

# Free User Limits
FREE_USER_DAILY_LIMIT=10
FREE_USER_MONTHLY_LIMIT=100

# Referral System
REFERRAL_ENABLED=true
REFERRAL_REWARD_BYPASSES=5
MIN_REFERRALS_FOR_REWARD=3

# Premium Features
PREMIUM_NOTIFICATION_DAYS=3

# Rate Limiting
REQUEST_TIMEOUT=60
MAX_RETRIES=3
CLOUDFLARE_TIMEOUT=30

# Browser Settings
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=45

# Cache Settings
CACHE_EXPIRY_HOURS=24

# Notification Settings
NOTIFY_ADMIN_ERRORS=true
ERROR_CHANNEL_ID=-1001234567890

# AI Learning Configuration (Google Gemini - FREE)
GEMINI_API_KEY=your_gemini_api_key_here
# Get free API key from: https://makersuite.google.com/app/apikey

